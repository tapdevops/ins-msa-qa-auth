# ------------------------------------------------------------------
#
# 						   Microservice Auth
#
# ------------------------------------------------------------------
# Set Node version
FROM node:8
# ------------------------------------------------------------------
# Create app directory
WORKDIR /usr/src/app
# ------------------------------------------------------------------
# Install app dependencies
COPY package.json /usr/src/app
# ------------------------------------------------------------------
# Install required packages
RUN npm install
RUN npm install --global --unsafe-perm realm-exporter
# ------------------------------------------------------------------
# Bundle app source
COPY . /usr/src/app
# ------------------------------------------------------------------
# Setup port
EXPOSE 4008
# ------------------------------------------------------------------
# Running command
CMD [ "node", "server.js" ]
# ------------------------------------------------------------------
#
 
